{
  "name": "glint-server-v2",
  "version": "1.0.0",
  "repository": "https://github.com/Dot-Line-20/glint-server-v2",
  "contributors": [
    "kraccoon-dev <kraccoon@kakao.com>",
    "H2Owater425 <h2o@h2owr.xyz>"
  ],
  "license": "MIT",
  "main": "distribution/server.js",
  "scripts": {
    "prepare": "husky install",
    "postinstall": "prisma generate",
    "build": "tsc --project tsconfig.json",
    "start": "node --require=tsconfig-paths/register distribution/server.js",
    "dev": "ts-node-dev --rs --require=tsconfig-paths/register --files source/server.ts",
    "lint": "eslint **/*.ts",
    "lint:fix": "eslint --fix **/*.ts",
    "prettier": "prettier **/*.ts",
    "prettier:fix": "prettier --write **/*.ts",
    "prisma": "prisma",
    "pre-commit": "lint-staged"
  },
  "dependencies": {
    "@prisma/client": "^4.2.1",
    "argon2": "^0.29.1",
    "dotenv": "^16.0.1",
    "fastify": "^4.5.3",
    "fluent-json-schema": "^3.1.0",
    "ioredis": "^5.2.3",
    "jsonwebtoken": "^8.5.1",
    "mariadb": "^3.0.1",
    "nodemailer": "^6.7.8",
    "tsconfig-paths": "^4.1.0"
  },
  "devDependencies": {
    "@types/jsonwebtoken": "^8.5.9",
    "@types/node": "^18.7.13",
    "@types/nodemailer": "^6.4.6",
    "@typescript-eslint/eslint-plugin": "^5.35.1",
    "@typescript-eslint/parser": "^5.35.1",
    "eslint": "^8.22.0",
    "eslint-config-prettier": "^8.5.0",
    "husky": "^8.0.1",
    "lint-staged": "^13.0.3",
    "prettier": "^2.7.1",
    "prisma": "^4.2.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^4.8.2"
  }
}
