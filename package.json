{
  "name": "pg-examination-server",
  "version": "1.0.0",
  "repository": "https://github.com/dimipay/pg-examination-server",
  "author": "kraccoon-dev <kraccoon@kakao.com>",
  "license": "MIT",
  "scripts": {
    "start": "ts-node -r tsconfig-paths/register src/server.ts",
    "dev": "nodemon -r tsconfig-paths/register src/server.ts",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "db:seed": "npx prisma db seed",
    "db:push": "npx prisma db push && yarn db:pull",
    "db:pull": "npx prisma db pull && npx prisma generate",
    "docs:server": "docsify serve docs",
    "prepare": "husky install",
    "test": "exit 0"
  },
  "prisma": {
    "seed": "ts-node --compiler-options {\"module\":\"CommonJS\"} -r tsconfig-paths/register prisma/seed.ts"
  },
  "husku": {
    "hooks": {
      "pre-push": "yarn lint:fix && yarn test"
    }
  },
  "dependencies": {
    "@prisma/client": "^4.2.1",
    "axios": "^0.27.2",
    "cors": "^2.8.5",
    "docsify-cli": "^4.4.4",
    "dotenv": "^16.0.1",
    "express": "^4.18.1",
    "express-bearer-token": "^2.4.0",
    "helmet": "^5.1.1",
    "http-errors": "^2.0.0",
    "joi": "^17.6.0",
    "jsonwebtoken": "^8.5.1",
    "moment": "^2.29.4",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.1.0"
  },
  "devDependencies": {
    "@tsconfig/node16": "^1.0.3",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/http-errors": "^1.8.2",
    "@types/jsonwebtoken": "^8.5.8",
    "@types/node": "^18.7.2",
    "@typescript-eslint/eslint-plugin": "^5.33.0",
    "@typescript-eslint/parser": "^5.33.0",
    "eslint": "^8.21.0",
    "husky": "^8.0.0",
    "nodemon": "^2.0.19",
    "prettier": "^2.7.1",
    "prisma": "^4.2.1",
    "typescript": "^4.7.4"
  }
}
