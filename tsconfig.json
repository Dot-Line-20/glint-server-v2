{
  "compilerOptions": {
    "lib": ["es2021"],
    "module": "commonjs",
    "target": "es2021",

    "outDir": "distribution",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "@library/*": ["source/library/*", "distribution/library/*"],
      "@schema/*": ["source/schema/*", "distribution/schema/*"]
    },
		"typeRoots": ["source/types"],
    "removeComments": true
  },
  "exclude": ["node_modules", "distribution/**/*"],
  "include": ["source/**/*"]
}
